{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ChatGPT Patch Response",
  "description": "Schema for validating ChatGPT AI patch responses",
  "type": "object",
  "properties": {
    "action": {
      "type": "string",
      "enum": ["create", "modify", "delete", "review"],
      "description": "Action to be performed on the target file"
    },
    "file_path": {
      "type": "string",
      "pattern": "^[^\\0]+$",
      "minLength": 1,
      "maxLength": 1000,
      "description": "Target file path for the patch"
    },
    "content": {
      "type": "string",
      "description": "New or modified file content"
    },
    "diff": {
      "type": "string",
      "description": "Unified diff format for changes"
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "AI confidence score for the patch"
    },
    "reasoning": {
      "type": "string",
      "description": "Explanation of the changes made"
    },
    "security_analysis": {
      "type": "object",
      "properties": {
        "safe": {
          "type": "boolean",
          "description": "Whether the patch is considered safe"
        },
        "concerns": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "List of security concerns identified"
        },
        "risk_level": {
          "type": "string",
          "enum": ["low", "medium", "high", "critical"],
          "description": "Risk level assessment"
        }
      },
      "required": ["safe", "risk_level"]
    },
    "metadata": {
      "type": "object",
      "properties": {
        "timestamp": {
          "type": "string",
          "format": "date-time"
        },
        "model": {
          "type": "string"
        },
        "version": {
          "type": "string"
        }
      }
    }
  },
  "required": ["action", "file_path", "security_analysis"],
  "additionalProperties": false
}