{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ChatGPT Review Findings",
  "description": "Schema for validating ChatGPT code review findings",
  "type": "object",
  "properties": {
    "review_id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the review"
    },
    "target_commit": {
      "type": "string",
      "pattern": "^[a-f0-9]{40}$",
      "description": "Git commit SHA being reviewed"
    },
    "findings": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": ["security", "performance", "bug", "style", "documentation", "optimization"],
            "description": "Type of finding"
          },
          "severity": {
            "type": "string",
            "enum": ["info", "warning", "error", "critical"],
            "description": "Severity level of the finding"
          },
          "file_path": {
            "type": "string",
            "description": "File where the issue was found"
          },
          "line_number": {
            "type": "integer",
            "minimum": 1,
            "description": "Line number of the issue"
          },
          "message": {
            "type": "string",
            "minLength": 10,
            "maxLength": 500,
            "description": "Description of the finding"
          },
          "suggestion": {
            "type": "string",
            "description": "Suggested fix or improvement"
          },
          "code_snippet": {
            "type": "string",
            "description": "Relevant code snippet"
          },
          "confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "description": "AI confidence in this finding"
          }
        },
        "required": ["type", "severity", "file_path", "message"]
      }
    },
    "summary": {
      "type": "object",
      "properties": {
        "total_issues": {
          "type": "integer",
          "minimum": 0
        },
        "critical_count": {
          "type": "integer",
          "minimum": 0
        },
        "error_count": {
          "type": "integer",
          "minimum": 0
        },
        "warning_count": {
          "type": "integer",
          "minimum": 0
        },
        "overall_score": {
          "type": "number",
          "minimum": 0,
          "maximum": 10,
          "description": "Overall code quality score"
        }
      },
      "required": ["total_issues"]
    },
    "recommendations": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "General recommendations for improvement"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "review_timestamp": {
          "type": "string",
          "format": "date-time"
        },
        "reviewer_model": {
          "type": "string"
        },
        "analysis_duration": {
          "type": "number",
          "description": "Time taken for analysis in seconds"
        }
      }
    }
  },
  "required": ["review_id", "target_commit", "findings", "summary"],
  "additionalProperties": false
}